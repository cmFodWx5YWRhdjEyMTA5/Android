<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="1dp"
        android:background="#EEEEEE"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/close"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="#00000000"
            android:padding="10dp"
            android:scaleType="centerInside"
            android:src="@drawable/back_accent" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:text="Kindly provide details"
            android:textSize="17sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="25dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/gaav"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Select Your Gaav"
                android:textSize="17sp" />

            <ImageButton
                android:id="@+id/get_gaav"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="#00000000"
                android:padding="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/next_normal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/family"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Select Your Family"
                android:textSize="17sp" />

            <ImageButton
                android:id="@+id/get_families"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="#00000000"
                android:padding="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/next_normal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/user"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Select Your Name"
                android:textSize="17sp" />

            <ImageButton
                android:id="@+id/get_family_member"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="#00000000"
                android:padding="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/next_normal" />
        </LinearLayout>

        <TextView
            android:id="@+id/proceed"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorAccent"
            android:gravity="center"
            android:text="Request Password Change"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content">

            <ImageButton
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center_vertical"
                android:background="#00000000"
                android:scaleType="centerInside"
                android:padding="14dp"
                android:src="@drawable/customer_care_accent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:text="Trouble understanding, Contact us on +917666601601 for all queries"
                android:textSize="12sp" />



        </LinearLayout>

    </LinearLayout>


</LinearLayout>